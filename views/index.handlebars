<!-- Banner e Pesquisa -->
    <div id="top-container" class="container-fluid">
      <h1 id="main-title" class="text-center">
        Encontre a vaga dos seus sonhos
      </h1>
      <h3 id="main-subtitle" class="text-center">
        Somos o site com mais vagas em tecnologia no mercado, totalmente
        direcionadas a home office
      </h3>
      <form id="search-form" class="form-inline" action="/" method="get">
        <div class="form-group col-md-10">
          <input
            id="job"
            name="job"
            class="form-control"
            type="text"
            placeholder="Digite a a palavra chave da vaga"
          />
        </div>
        <div class="col-md-2">
          <button class="btn btn-primary" type="submit">Buscar</button>
        </div>
      </form>
    </div>
    <!-- Main vagas -->
    <main>
      <div id="jobs-container" class="container">
        <div class="row">
          <div class="col-md-12">
            {{#if searchJob}}
              <h2 id="job-list-title">Exibindo vagas que contém {{searchJob}}</h2>
            {{else}}
              <h2 id="job-list-title">Veja as nossas vagas em destaque</h2>
            {{/if}}
            <ul id="job-list" class="list-group">
              {{#each jobs}}
              {{!-- 
                Mapeando através do BD para redenderizar os itens
                Foi aplicada uma condicional para a ativar a classe css new-job
                Assim, caso a vaga seja nova ela receberá um destaque
               --}}
              <li class="list-group-item {{#if dataValues.new_job}}new-job{{/if}}">
                <img src="/img/company.svg" alt="company logo" />
                <p>{{dataValues.company}}</p>
                <h2>{{dataValues.title}}</h2>
                <p>R$ {{dataValues.salary}}</p>
                <span class="new-job-label">Nova</span>
                <a href="/jobs/view/{{dataValues.id}}" class="btn btn-primary">Ver vaga</a>
              </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </main>